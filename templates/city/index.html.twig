{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/admin/campus_show.css') }}">
{% endblock %}

{% block body %}
    <h1>City index</h1>
<section>

    {{ form_start(searchForm) }}

    <h2>Filtrer les campus</h2>
    <br>

    <div>
        <label>Le nom contient</label>
        <div>
            <img src="{{ asset('img/loupe.png') }}">
            {{ form_widget(searchForm)}}
        </div>
    </div>

    <button name="campus_Search">
        Rechercher
    </button>


    {{ form_end(searchForm) }}

    <br>
    <br>

    <section class="campus_container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ZipCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.name }}</td>
                <td>{{ city.zipCode }}</td>
                <td>
                    <a href="{{ path('app_city_show', {'id': city.id}) }}">show</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </section>

</section>
    <br>
    <br>
    <br>
    <a href="{{ path('app_city_new') }}">Create new</a>
{% endblock %}
