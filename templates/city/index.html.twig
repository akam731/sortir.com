{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/admin/campus_show.css') }}">
{% endblock %}

{% block body %}
    <h1>City index</h1>
<section>

    {{ form_start(searchForm) }}

    <h2>Filtrer les campus</h2>
    <br>

    <div>
        <label>Le nom contient</label>
        <div>
            <img src="{{ asset('img/loupe.png') }}">
            {{ form_widget(searchForm)}}
        </div>
    </div>

    <button name="campus_Search">
        Rechercher
    </button>


    {{ form_end(searchForm) }}

    <br>
    <br>

    <section class="campus_container">
    <table class="table">
        <thead>
                <th>Name</th>
                <th>ZipCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.name }}</td>
                <td>{{ city.zipCode }}</td>
                <td>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>
                    {{ include('city/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        <tr>
            {{ form_start(form) }}
            <td>
                {{ form_row(form.name) }}
            </td>
            <td>
                {{ form_row(form.zipCode) }}
            </td>
            <td>
                <button class="btn">{{ button_label|default('Ajouter') }}</button>
            </td>
            {{ form_end(form) }}
        </tr>
        </tbody>
    </table>

    </section>

</section>
    <br>
    <br>
    <br>
{% endblock %}
